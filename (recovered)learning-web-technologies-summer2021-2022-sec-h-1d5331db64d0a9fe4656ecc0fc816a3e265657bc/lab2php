  <?php
	
echo "Odd numbers from 10 - 100: <br>"; 

	for($i = 10 ; $i <= 100 ; $i++)
	{
		if ($i % 2 != 0)
		{
			echo $i, "<br>";
		}
	}

?>
------task6-----------
<?php
	
	$a = [2,1,4,6];
	$s = 6;
	$bool = false;
	
	echo "The array is: [ ";
	
	for($i = 0; $i < count($a); $i++)
	{
		echo $a[$i], " ";
	}
	echo " ] <br>";
	
	echo "Element to be searched: ", $s;
	
	for($i = 0; $i < count($a); $i++)
	{
		if ($a[$i] == $s)
		{
			echo "<br>", $s, " was found on the ", $i, " index of the array.";
			$bool = true;
		}
		
	}
	if($bool == false)
			echo "<br>","The element was not found in the array";
		
?>
------task7-----------
<?php
	$x = '*';
	$n = 'A';
	for ($i = 0; $i<3; $i++)
	{
		for ($j = 0; $j <= $i ; $j++)
		{
			echo $x;
		}
		echo "<br>";
	}
	echo "<br>";
	echo "<br>";
	
	for ($i = 2; $i>=0; $i--)
	{
		for ($j = 0; $j <= $i ; $j++)
		{
			echo $j+1;
		}
		echo "<br>";
	}
	echo "<br>";
	echo "<br>";
	
	for ($i = 0; $i<3; $i++)
	{
		for ($j = 0; $j <= $i ; $j++)
		{
			echo $n++;
		}
		echo "<br>";
	}
	
?>
