<?php
  $l = 20;
  $b = 10;
  $area = $l*$b;
  $perimeter = 2*($l + $b);

  echo "Length: ", $l, "<br>";
  echo "Width: ", $b, "<br>";
  echo "Area: ", $area, "<br>";
  echo "Perimeter: ",$perimeter;
 ?>

-----------task2-----------

<?php
  $price = 300;
  $vat = 15;
  $n_price = $price + ($price * ($vat/100));
  echo "Normal price: ", $price, "<br>";
  echo "Price with vat: ",$n_price;
  
 ?>
